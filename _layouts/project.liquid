---
layout: default
---
<body class="project">
    <div id="top"></div>
    <input name="site-nav-toggle" id="site-nav-toggle" class="invisible" type="checkbox" value=""/>
    <label for="site-nav-toggle" class="site-header site-header--project">
        <h1 class="site-header__title lace">Projects</h1>
    </label>
    <label for="site-nav-toggle" class="site-nav-screen dither dither--3"></label>
    <nav class="site-nav site-nav--project white dither">
        {% include site-nav-items.liquid %}
    </nav>
    <article class="project__page">
        <div class="info-header dither">
            <a href="{{ site.baseurl }}/" class="planets planets--project">
                <div class="planet world world--project"></div>
            </a>
        </div>
        <main class="site-main site-main--project">
            <header class="project__header">
                {% include project-breadcrumbs.liquid %}
                {% include page-navigation-desktop.liquid %}
            </header>
            <h1 class="project__title">{{ page.name }}</h1>
            <div class="project__subheader">
                <p class="project__page-description">
                    {{ page.description }}
                    {% if page.link %}
                        <a href="{{ page.link }}" target="_blank" class="project__page-link"><span class="project__page-link-label">Link:</span><span class="project__page-link-url">{{ page.link }}</span></a>
                    {% endif %}
                </p>
                <div class="project__icons project__page-icons">
                    {% for icon in page.icons %}
                        <div class="project__icon icon-{{ icon }}"></div>
                    {% endfor %}
                </div>
            </div>
            {{ content }}
        </main>
        {% include page-navigation-mobile.liquid %}
    </article>
</body>
